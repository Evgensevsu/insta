<div id="<%= dom_id post %>" class= "container">
  <p>
    <%= post.title %>
  </p>

  <p>
    <%= post.description %>
  </p>

  <p>
    <%= post.keywords %>
  </p>
    <p>
    <%= post.user.email %>
  </p>
    <p>
      <%= link_to "Show this post", post %>
    </p>
    <% if user_signed_in?%>
    <% like = current_user.likes.find_by(post: post)%>
    <% if like.nil?%>
    <%= button_to "like", likes_path, params: { like: {post_id: post.id}}, method: :post %>
    <% else %>
     <%= button_to "Unlike", like_path(like), method: :delete %>
    <%end%>
    <% end %>
    <p><%= post.likes.count%>Likes</p>
    <%post.images.each do |image|%>
    <%= image_tag(image, style: "object-fit: cover; width: 350px; height: 300px;")%>
    <% end %>
    <p><%= link_to post.user.email, post.user, style: "z-index:" %></p>
</div>
