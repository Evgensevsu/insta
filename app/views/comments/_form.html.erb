<%= form_with(model: @comment, url: post_comments_path(@post.id)) do |form| %>
  <% if @comment.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(comment.errors.count, "error") %> </h2>

      <ul>
        <% comment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :text, style: "display: block" %>
    <%= form.text_field :text %>
  </div>

  <div>
    <%= form.text_field :user_id, type: "hidden" %>
  </div>

  <div>
    <%= form.text_field :post_id, type: "hidden" %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
